<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:layout_width="fill_parent"  android:layout_height="wrap_content"
        android:layout_margin="10dp" android:gravity="center"
        android:text="@string/userInfo_title" android:textSize="32sp"
        android:textColor="#AA0"/>
    
	<TableLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom|center_vertical" >

            <TextView
	            android:layout_column="1"
	            android:text="@string/userInfo_image"
	            android:gravity="right"
	            android:padding="3dip" />

            <ImageView
                android:id="@+id/profileImage" 
                android:contentDescription="@string/userInfo_image"
                android:gravity="left" />

        </TableRow>
        
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
            <TextView
	            android:layout_column="1"
	            android:text="@string/userInfo_name"
	            android:gravity="right"
	            android:padding="3dip" />

       		 <TextView
       		     android:id="@+id/userInfo_name"
       		     android:gravity="left"
       		     android:padding="3dip" />
       		 
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
            <TextView
	            android:layout_column="1"
	            android:text="@string/userInfo_statusCount"
	            android:gravity="right"
	            android:padding="3dip" />
            

       		 <TextView
       		     android:id="@+id/userInfo_statusCount"
       		     android:gravity="left"
       		     android:padding="3dip" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
            <TextView
	            android:layout_column="1"
	            android:text="@string/userInfo_nSubscribers"
	            android:gravity="right"
	            android:padding="3dip" />

       		 <TextView
       		     android:id="@+id/userInfo_nSubscribers"
       		     android:gravity="left"
       		     android:padding="3dip" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
            <TextView
	            android:layout_column="1"
	            android:text="@string/userInfo_nSubscriptions"
	            android:gravity="right"
	            android:padding="3dip" />

       		 <TextView
       		     android:id="@+id/userInfo_nSubscriptions"
       		     android:gravity="left"
       		     android:padding="3dip" />
        </TableRow>

    </TableLayout>
    
</LinearLayout>