<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/dark_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tl_item_textUser"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="@string/tl_item_textuser"
            android:layout_weight="1"
            android:textColor="#d6d6d6"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tl_item_textTime"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@string/tl_item_texttime"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tl_item_textMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tl_item_textmessage" />


</LinearLayout>